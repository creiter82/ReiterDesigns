<%= form_for(product_image) do |f| %>
  <% if product_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_image.errors.count, "error") %> prohibited this product_image from being saved:</h2>

      <ul>
      <% product_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :product_id, 'Product', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.collection_select(:product_id, Product.all, :id, :title, 
                                {
                                  include_blank: true
                                },
                                class: 'custom-select'
                              )
      %>
    </div>  
  </div>  

  <div class="form-group row">
    <%= f.label :title, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: 'form-control' %>
    </div>  
  </div>

  <div class="form-group row"> 
    <!-- <div class="custom-file col">
      <div class="col">
        <%#= f.text_field :image, class: 'custom-file-input' %>
        <%#= f.label :image, 'Choose file', class: 'custom-file-label' %>
      </div>  
    </div> -->

    <div class="col">
      <label class="btn btn-primary">
        Upload a image <%= f.file_field :image, style: 'display:none;' %>
      </label>
    </div>  

    <div class="custom-control custom-checkbox col">
      <%= f.check_box :featured, class: 'custom-control-input' %>
      <%= f.label :featured, class: 'custom-control-label' %>
    </div>
  </div>  

  <div class="form-group-row">
    <%= f.submit 'Upload image', class: 'btn btn-success' %>
  </div>
<% end %>

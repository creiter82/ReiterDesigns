<div class="col-md-4"%>
  <div class="card product-card">
    <%= feature_image(product_item) %>   
    <div class="card-body">
      <h4 class="card-title"><%= link_to product_item.title.titleize, product_path(product_item) %></h4>
      <p class="card-text"><%= product_item.desc.capitalize %></p>
      <p class="card-text"><%= product_item.price %></p>
      <p class="card-text"><%= link_to 'Delete', product_path(product_item), method: :delete, data: { confirm: "Are you sure you want to delete \'#{product_item.title.titleize}\'?" }, class: 'btn btn-sm btn-danger' %></p>
    </div>  
  </div> 
</div>
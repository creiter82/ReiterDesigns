<div class="container product-container"> 
    
  <div class="row">
      <div class="col-md-6">
        <% if @featured %>
          <p><%= link_to image_tag(@featured.image.url, width: '100%'), @featured.image.url, "data-lightbox": 'product_images' %></p> 
        <% end %>
      </div> 
      <div class="col-md-2">
        <%# @product.product_images.each do |p| %>
        <% @images.each do |img| %>
          <div class="col">
            <p><%= link_to image_tag(img.image.url, width: '100%'), img.image.url, "data-lightbox": 'product_images' %></p>
          </div>  
        <% end %>
      </div>
      <div class="col-md-4">
        <h1"><%= @product.title %></h1>
        <p><%= @product.desc.capitalize %></p>
        <p>$<%= @product.price %></p>
        <p><%= link_to 'Add image', new_product_image_path, class: 'btn btn-outline-primary' %>
      </div>   
  </div> 

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>  

<div class="container">  
  <p id="notice"><%= notice %></p>

  <div class="row">
      <div class="col-md-6">
        <p><%= image_tag(@featured.image, width: '100%') %></p>
      </div>  
  </div> 

  <div class="row">
    <% @product.product_images.each do |p| %>
      <div class="col-md-4">
        <p><%= image_tag(p.image, width: '100%') %></p>
      </div>  
    <% end %>
  </div>  

  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.desc %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>  

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Products Available</h1>
      <p class="lead text-muted">No veneer here!  All our furniture and decor is made of solid wood.  That means no MDF, particle board, plywood, or any other things you can think of that are not solid wood.</p>
      <p>
        <a href="#" class="btn btn-primary">Main call to action</a>
        <a href="#" class="btn btn-secondary">Secondary action</a>
      </p>
    </div>
  </section>

  <div class="album text-muted">
    <div class="container">

      <div class="row">

        <% if @products %>
          <% @products.each do |p| %>
            <div class="col-md-4"%>
              <div class="card product-card">
                <%= link_to holder_tag('328x200'), product_path(p) %>
                <div class="card-body">
                  <h4 class="card-title"><%= link_to p.title.titleize, product_path(p) %></h4>
                  <p class="card-text"><%= p.desc %></p>
                  <p class="card-text"><%= p.price %></p>
                </div>  
              </div> 
            </div>   
          <% end %> 
        <% end %> 
        
      </div>

    </div>
  </div>

</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    <p>&copy; <%= Time.current.year %> Reiter Designs, Born in Castle Rock, CO<br />
      <small>~ Modern, solid wood decor &amp; furniture with a twist of metal ~</small></p>
  </div>
</footer>



<header class="masthead clearfix">
  <div class="inner">
    <!-- <h3 class="masthead-brand">Reiter Designs</h3> -->
    <%= link_to image_tag('reiter-designs-logo-sm.png'), root_path, class: 'masthead-brand' %>
    <nav class="nav nav-masthead">
      <!-- <a class="nav-link active" href="#">Home</a> -->
      <%= link_to 'Products', products_path, class: 'nav-link' %>
      <%= link_to 'Contact', '#', class: 'nav-link' %>
      <% if current_user %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-auth-links nav-logout' %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'nav-auth-links nav-login' %>  
      <% end %>  
    </nav>
  </div>
</header>
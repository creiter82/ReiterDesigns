<!DOCTYPE html>
<html>
  <head>
    <title>ReiterDesigns</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100,300|Open+Sans:300" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <%= render 'shared/application_nav' %>

          <%= render 'shared/flash' %>
    
          <%= yield %>

          <%= render 'shared/application_footer' %>

        </div>

      </div>

    </div>  

    <%= render 'shared/mail_chimp' %>

    <%= render 'shared/turbolinks' %>
  </body>
</html>

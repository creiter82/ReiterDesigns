<!DOCTYPE html>
<html>
  <head>
    <title>ReiterDesigns</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100,300|Open+Sans:300" rel="stylesheet">

    <%= stylesheet_link_tag    'products', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/product_nav' %>

    <% unless current_page?('/products') %>
      <%= render 'shared/flash' %>
    <% end %>  

    <%= yield %>

    <%= render 'shared/product_footer' %>

    <%= render 'shared/turbolinks' %>

  </body>
</html>